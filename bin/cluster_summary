#!/bin/sh


if [ "$#" -eq 0 ]; then
	 clusters=( "serial" "hugemem" "mpp2" )
else
	 clusters=( "$@" )
fi

for i in "${clusters[@]}"
do
	echo -e "CLUSTER: $i\n"
	squeue --clusters=$i | awk '
	BEGIN {
	   printf("%-12s %12s %10s\n", "user", "queued", "running")
	}
	NR >= 2 {
	   user = $4
	   users[user] = 1
	   if ($5 == "R") {
	       jobs_running[user] += 1
	       nodes_running[user] += $8
	   } else if ($5 == "PD") {
	       jobs_queued[user] += 1
	       nodes_queued[user] += $8
	   }
	}
	END {
	   for (user in users) {
	       printf("%-12s %5i (%5i)  %3i (%3i)\n", user,
		      jobs_queued[user], nodes_queued[user],
		      jobs_running[user], nodes_running[user])
	   }
	}
	'
	echo -e "\n\n"
done

